                        </TextBlock>
                    </ScrollViewer>
                </Border>
                <Button Style="{StaticResource ButtonStyle}" 
                        Content="Back" 
                        Height="45" 
                        Width="120" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Bottom" 
                        Click="ButtonBackClick"/>
            </Grid>
        </Border>
    </Grid>
</Page>
