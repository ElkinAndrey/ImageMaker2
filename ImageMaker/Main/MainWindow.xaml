    </Window.Resources>

    <Canvas Height="auto" 
            Width="auto" 
            AllowDrop="True" 
            Drop="text_PreviewDrop">
        <Border Width="1000" 
                Height="600" 
                Name="border1" 
                CornerRadius="10" 
                Background="#474747" 
                BorderThickness="0" 
                BorderBrush="#474747" 
                Margin="0,0,0,0">
            <Grid>
                <!--Центральная область приложения-->
                <Grid Margin="288,25,0,0">
                    <Grid HorizontalAlignment="Stretch" 
                          VerticalAlignment="Stretch" 
                          Margin="120,60,120,60">
                        <Grid Margin="0,0,0,0" 
                              VerticalAlignment="Top" 
                              Height="330">
                            <Image Name="text" 
                                   Source="pack://siteoforigin:,,,/HelpPhoto1.png" 
                                   MaxHeight="330" 
                                   MaxWidth="470" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                        </Grid>
                        <TextBlock MaxHeight="40" 
                                   x:Name="path" 
                                   TextWrapping="Wrap" 
                                   Text="" 
                                   HorizontalAlignment="Stretch" 
                                   VerticalAlignment="Top" 
                                   FontSize="17" 
                                   FontFamily="Arial Rounded MT Bold" 
                                   Margin="0,338,0,0" 
                                   Foreground="White" 
                                   TextAlignment="Center"/>
                        <Grid Margin="0,0,0,0" 
                              Height="60" 
                              VerticalAlignment="Bottom">
                            <Button Style="{StaticResource Button}" 
                                    x:Name="Collect" 
                                    Content="Collect" 
                                    Width="185" 
                                    Height="60" 
                                    VerticalAlignment="Top" 
                                    HorizontalAlignment="Left" 
                                    Click="Collect_Click"/>
                            <Button Style="{StaticResource Button}" 
                                    x:Name="Path" 
                                    Content="Path" 
                                    Width="185" 
                                    Height="60" 
                                    VerticalAlignment="Bottom" 
                                    HorizontalAlignment="Right" 
                                    Click="Path_Click"/>
                            <ProgressBar x:Name="PBbar" 
                                         Width="0"
                                         VerticalAlignment="Stretch" 
                                         HorizontalAlignment="Stretch" 
                                         Margin="0,25,0,25"/>
                        </Grid>
                    </Grid>
                </Grid>

                <!--Левое окно с опциями-->
                <StackPanel>
                    <Border Width="240" 
                            CornerRadius="0, 10, 10, 0" 
                            Background="#333333" 
                            BorderThickness="0" 
                            BorderBrush="#474747" 
                            HorizontalAlignment="Left" 
                            Margin="0,35,0,10">
                        <Grid Margin="0,0,0,0">
                            <TextBlock TextWrapping="Wrap" 
                                       Text="Options" 
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Top" 
                                       Margin="14,21,0,0" 
                                       FontSize="44" 
                                       FontFamily="Arial Rounded MT Bold" 
                                       Foreground="White"/>
                            <Button Style="{StaticResource button5}" 
                                    x:Name="btnopen" 
                                    Content="⚙" 
                                    Width="30" 
                                    Height="30" 
                                    VerticalAlignment="Top" 
                                    HorizontalAlignment="Right" 
                                    Margin="0,37,17,0" 
                                    Click="btnopen_Click"/>
                            <TextBlock TextWrapping="Wrap" 
                                       Text="Color Inversion" 
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Top" 
                                       Margin="25,96,0,0" 
                                       Foreground="White" 
                                       FontSize="18" 
                                       FontFamily="Arial Rounded MT Bold"/>
                            <Grid HorizontalAlignment="Left" 
                                  VerticalAlignment="Top" 
                                  Margin="37,132,0,0" 
                                  Height="37" 
                                  Width="11">
                                <RadioButton x:Name="RadioButton1" 
                                             Style="{StaticResource RadioButtonStyle}"  
                                             Content="RadioButton" 
                                             HorizontalAlignment="Left" 
                                             VerticalAlignment="Top" 
                                             Height="11" 
                                             Width="11" 
                                             Checked="RadioButton1_Checked"/>
                                <RadioButton x:Name="RadioButton2" 
                                             Style="{StaticResource RadioButtonStyle}" 
                                             Content="RadioButton" 
                                             HorizontalAlignment="Left" 
                                             VerticalAlignment="Bottom" 
                                             Height="11" 
                                             Width="11" 
                                             Checked="RadioButton2_Checked"/>
                            </Grid>
                            <TextBlock TextWrapping="Wrap" 
                                       Text="White" 
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Top" 
                                       Margin="55,127,0,0" 
                                       Foreground="White" 
                                       FontSize="18" 
                                       FontFamily="Arial Rounded MT Bold"/>
                            <TextBlock TextWrapping="Wrap" 
                                       Text="Black" 
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Top" 
                                       Margin="55,153,0,0" 
                                       Foreground="White" 
                                       FontSize="18" 
                                       FontFamily="Arial Rounded MT Bold"/>
                            <TextBlock TextWrapping="Wrap" 
                                       Text="Contrast" 
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Top" 
                                       Margin="25,202,0,0" 
                                       Foreground="White" 
                                       FontSize="18" 
                                       FontFamily="Arial Rounded MT Bold"/>
                            <TextBox Validation.ErrorTemplate="{x:Null}" 
                                     Name="contrast"
                                     Text="{Binding ElementName=slider1, Path=Value}"  
                                     Style="{StaticResource textbox1}" 
                                     Margin="152,204,47,331" 
                                     Height="20" 
                                     Width="41" 
                                     Foreground="White" 
                                     FontFamily="Arial Rounded MT Bold" 
                                     FontSize="16" 
                                     VerticalContentAlignment="Center" 
                                     Padding="0" 
                                     TextAlignment="Center"
                                     TextChanged="contrast_TextChange"/>
                            <Slider IsSnapToTickEnabled="True" 
                                    TickFrequency="1" 
                                    x:Name="slider1" 
                                    Minimum="0" 
                                    Maximum="512" 
                                    Style="{StaticResource Horizontal_Slider}" 
                                    Margin="25,243,25,0" 
                                    HorizontalAlignment="Stretch" 
                                    VerticalAlignment="Top" 
                                    Width="auto" 
                                    ValueChanged="slider1_ValueChanged"/>
                            <TextBlock TextWrapping="Wrap" 
                                       Text="Size" 
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Top" 
                                       Margin="25,277,0,0" 
                                       Foreground="White" 
