        <Storyboard x:Key="OpenMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                To="0,35,0,10" 
                                DecelerationRatio="0.9" 
                                Duration="0:0:0.4"/>
        </Storyboard>
        <Storyboard x:Key="CloseMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" 
                                To="-240,35,0,10" 
                                DecelerationRatio="0.9" 
                                Duration="0:0:0.4"/>
        </Storyboard>
        <Storyboard x:Key="OpenSavePath">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" 
                                To="0,35,0,10" 
                                DecelerationRatio="0.9" 
                                Duration="0:0:0.4"/>
        </Storyboard>
        <Storyboard x:Key="CloseSavePath">
